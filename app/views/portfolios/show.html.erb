<div class="container port-container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag portfolio_img(@portfolio_item.thumb_image, 'main' ), width: '100%' %>
    </div>

    <div class="col-md-5">
      <h2><%= @portfolio_item.title %></h2>
      <hr />
      <em><%= @portfolio_item.subtitle %></em><br />
      <p><%= @portfolio_item.body %></p>

      <h4>Technologies Used</h4>
        <% @portfolio_item.technologies.each do |t| %>
          <p>
            <%= t.name %>
          </p>
        <% end %>
    </div>
  </div>
</div>
